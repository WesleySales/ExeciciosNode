<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body{font-family: Arial, Helvetica, sans-serif; padding: auto;}
        table{border-collapse: collapse; width: 100%;}
        th,td{border: 1px solid #ddd; padding: 8px;}
        th{background-color: #222; color: antiquewhite;}
    </style>
</head>
<body>
    <h1>Listagem de produtos disponiveis</h1>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Preco</th>
            </tr>
        </thead>
        <tbody>
            <% produtos.forEach(produto=>{ %>
                <tr>
                    <td><%= produto.id %></td>
                    <td><%= produto.nome %></td>
                    <td><%= produto.preco.toFixed(2) %></td>
                </tr>
                <% }); %>
        </tbody>
    </table>
    <h2> Cadastrar produtos</h2>
    <form action="/produtos" method="post">
        <label for="npme">Nome:</label>
        <input type="text" id="nome" name="nome" placeholder="Digite o nome do produtos" required>
        <label for="preco">Preço: R$</label>
        <input type="number" id="preco" step="0.01" placeholder="Digite o Preço" required>
        <button type="submit">Cadastrar</button>
    </form>
</body>
</html>
