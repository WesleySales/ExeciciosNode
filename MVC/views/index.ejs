  <div class="container-mb-3">
    <h2>Cadastrar produto</h2>
    <form  id="formProduto" action="/produtos" method="post">
      <div class="mb-3 mt-3">
        <label for="Nome">Nome:</label>
        <input type="text" class="form-control" id="nome" placeholder="Digite o nome do produto" name="nome">
      </div>
      <div class="mb-3">
        <label for="pwd">Preco:</label>
        <input type="number" class="form-control" id="preco" placeholder="Digite o preço" name="preco">
      </div>
      <button type="submit">Cadastrar</button>
    </form>
  </div>
